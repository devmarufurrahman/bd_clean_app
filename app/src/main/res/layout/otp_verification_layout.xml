<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/green_4"/>

        <ImageView
            android:id="@+id/bd_clean_logo"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/bdclean_logo_3"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_below="@+id/bd_clean_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the OTP code for next step"
                android:textColor="@color/bdclean_green"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="10dp"
                android:fontFamily="@font/bdclean"/>

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                app:height="40dp"
                app:width="40dp"
                app:otp_box_background="@color/bdclean_green"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                app:bar_enabled="true"
                app:bar_height="2dp"
                app:bar_active_color="@color/red"
                app:bar_inactive_color="@color/white"
                app:length="6"
                app:otp_text_size="18sp"/>

            <Button
                android:id="@+id/submitOkBtn"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/login_btn"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:text="Verify"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>