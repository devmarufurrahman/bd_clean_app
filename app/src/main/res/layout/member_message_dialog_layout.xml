<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@color/green_4"/>

        <ImageView
            android:id="@+id/sign_up_logo"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/bdclean_logo_3"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_below="@+id/sign_up_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/login_dialog_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/member_activity"
                android:textSize="18sp"
                android:textColor="@color/text_color"
                android:fontFamily="@font/bdclean"
                android:gravity="center"
                android:padding="10dp"/>


            <EditText
                android:id="@+id/edit_message"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="100dp"
                android:background="@drawable/edittext_background"
                android:inputType="textMultiLine"
                android:fontFamily="@font/bdclean"
                android:justificationMode="inter_word"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:gravity="top|start"
                android:hint="@string/write_message"
                android:textSize="14sp"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/member_details"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="@string/member_details"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bdclean_bold"
                    android:textColor="@color/white"
                    android:layout_marginVertical="10dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:background="@drawable/button_shape_5"/>

                <Button
                    android:id="@+id/send_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="@string/send_message"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bdclean_bold"
                    android:textColor="@color/white"
                    android:layout_marginVertical="10dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:background="@drawable/button_shape_6"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>