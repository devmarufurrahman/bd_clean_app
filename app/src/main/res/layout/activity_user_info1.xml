<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserInfoActivity_1"
    android:background="@drawable/activity_background_4">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title=" "
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bdclean_green">

        <TextView
            android:id="@+id/event_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/bdclean_bold"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/user_info_tv_1"
        android:layout_gravity="center"
        android:textColor="@color/white_2"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/layout_background"
        android:backgroundTint="@color/green_4"
        android:layout_centerHorizontal="true"
        android:justificationMode="inter_word"
        android:padding="10dp"
        android:layout_below="@+id/custom_toolbar"
        android:fontFamily="@font/bdclean_bold"/>

    <ScrollView
        android:id="@+id/reg_frag_1_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/reg_ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/facebook_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/facebook_id_link"
                    android:textSize="14sp"
                    android:fontFamily="@font/bdclean"
                    android:background="@drawable/edittext_background"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorHint="@color/hint_color"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="textEmailAddress"/>


                <EditText
                    android:id="@+id/present_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/permanent_address"
                    android:textSize="14sp"
                    android:fontFamily="@font/bdclean"
                    android:background="@drawable/edittext_background"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorHint="@color/hint_color"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="textPostalAddress"/>

                <EditText
                    android:id="@+id/father_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:hint="@string/father_name"
                    android:textSize="14sp"
                    android:fontFamily="@font/bdclean"
                    android:background="@drawable/edittext_background"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorHint="@color/hint_color"
                    android:layout_marginTop="15dp"
                    android:inputType="textPersonName"/>

                <EditText
                    android:id="@+id/father_contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:hint="@string/father_contact"
                    android:textSize="14sp"
                    android:fontFamily="@font/bdclean"
                    android:background="@drawable/edittext_background"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorHint="@color/hint_color"
                    android:layout_marginTop="15dp"
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/mother_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:hint="@string/mother_name"
                    android:textSize="14sp"
                    android:fontFamily="@font/bdclean"
                    android:background="@drawable/edittext_background"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorHint="@color/hint_color"
                    android:layout_marginTop="15dp"
                    android:inputType="textPersonName"/>

                <EditText
                    android:id="@+id/mother_contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:hint="@string/mother_contact"
                    android:textSize="14sp"
                    android:fontFamily="@font/bdclean"
                    android:background="@drawable/edittext_background"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorHint="@color/hint_color"
                    android:layout_marginTop="15dp"
                    android:inputType="phone"/>

                <RelativeLayout
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/layout_shape_2"
                    android:backgroundTint="@color/white"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_profile_photo"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean_bold"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/member_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/icon_camera" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="5dp">


                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_background"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:textColor="@color/white_2"
                    android:textSize="16sp"
                    android:fontFamily="@font/bdclean_bold"
                    android:text="@string/submit"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:indeterminateTint="@color/red" />

</RelativeLayout>