<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="10dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@color/green_4"/>

    <ImageView
        android:id="@+id/bd_clean_logo"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/bdclean_logo_3"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_below="@+id/bd_clean_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="2dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@color/bdclean_greenDark"
            app:contentPadding="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:text="@string/membership_status"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="2dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/member_status"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="2dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:text="@string/total_completed_event_this_month"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:fontFamily="@font/roboto_black"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/event_count"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:fontFamily="@font/roboto_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="2dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:text="@string/total_facebook_post_this_month"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:fontFamily="@font/roboto_black"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/post_count"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:fontFamily="@font/roboto_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/close_btn"
            android:layout_width="match_parent"
            android:text="@string/close"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_2"
            android:layout_height="40dp"/>

    </LinearLayout>

</RelativeLayout>

</androidx.cardview.widget.CardView>