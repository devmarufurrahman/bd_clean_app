<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalProfileActivity"
    tools:ignore="HardcodedText"
    android:background="@drawable/activity_background_4">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="Personal Profile"
        app:titleTextColor="@color/white_2"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:background="@color/green_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/pp_ll1"
        android:orientation="vertical"
        android:layout_below="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/bdclean_green">

        <ImageView
            android:id="@+id/bdclean_banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white_2"
            android:scaleType="centerCrop"
            android:src="@drawable/cover_photo" />

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:background="@drawable/profile_photo_background_2">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/personal_iv"
                android:layout_width="110dp"
                android:layout_height="110dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/image_layout"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="start"
            android:layout_below="@+id/bdclean_banner">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/personal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="@font/bdclean_bold"
                    android:textColor="@color/white_2"/>

                <ImageView
                    android:id="@+id/status_iv"
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/user_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="designation"
                android:textColor="@color/white_2"
                android:fontFamily="@font/bdclean"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="user id"
                android:textColor="@color/white_2"
                android:fontFamily="@font/bdclean"
                android:textSize="12sp"/>

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pp_ll1"
        android:layout_marginBottom="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/status_card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:backgroundTint="#b0d234"
                app:cardMaxElevation="2dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginTop="6dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="5dp"
                >

                <LinearLayout
                    android:id="@+id/layout_2"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bdclean_bold"
                        android:text="Personal Information"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/pp_card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/cardBgLight"
                app:cardMaxElevation="2dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="5dp"
                >

                <LinearLayout
                    android:layout_width="386dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_email" />

                        <TextView
                            android:id="@+id/personal_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:fontFamily="@font/bdclean"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:textColor="@color/white_2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_phone" />

                        <TextView
                            android:id="@+id/personal_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:text="Contact"
                            android:padding="5dp"
                            android:fontFamily="@font/bdclean"
                            android:textSize="14sp"
                            android:textColor="@color/white_2" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"
                            app:tint="@color/white_2"
                            android:src="@drawable/icon_address"/>

                        <TextView
                            android:id="@+id/personal_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/address"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/white_2"
                            android:padding="5dp"
                            android:fontFamily="@font/bdclean"
                            android:textSize="12sp"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_occupation"/>

                        <TextView
                            android:id="@+id/personal_occupation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Occupation"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/white_2"
                            android:fontFamily="@font/bdclean"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:gravity="center"/>

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_social_media"/>

                        <TextView
                            android:id="@+id/total_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Post"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/white_2"
                            android:fontFamily="@font/bdclean"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:gravity="center"/>

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_event"/>

                        <TextView
                            android:id="@+id/total_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Event"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/white_2"
                            android:fontFamily="@font/bdclean"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_baseline_add_location_24"
                            app:tint="@color/white_2"
                            />

                        <TextView
                            android:id="@+id/current_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white_2"
                            android:text="Location"
                            android:gravity="start"
                            android:fontFamily="@font/bdclean"
                            android:textSize="14sp"

                            android:padding="5dp"/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="120dp"
        app:backgroundTint="@color/white"
        android:src="@drawable/icon_edit"
        app:fabSize="auto" />

</RelativeLayout>