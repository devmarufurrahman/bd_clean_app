<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background_4"
    tools:context=".AboutBDCleanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="@string/bdclean_name"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white_2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/green_2">

        <include
            layout="@layout/language_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/log_out"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:background="@drawable/button_shape_1"
            android:drawableEnd="@drawable/ic_baseline_logout_24"
            android:paddingHorizontal="15dp"/>


    </androidx.appcompat.widget.Toolbar>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/about_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scrollV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/custom_toolbar"
                android:nestedScrollingEnabled="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/member_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/honorary_member"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="45dp"
                            android:background="@drawable/button_shape_5"
                            android:layout_marginEnd="1dp"
                            android:text="@string/be_a_honorary_member"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_black"/>


                        <Button
                            android:id="@+id/goodwill"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="45dp"
                            android:background="@drawable/button_shape_6"
                            android:text="@string/goodwill_ambassador"
                            android:gravity="center"
                            android:layout_marginStart="1dp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto_black"
                            android:textSize="12sp"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/joined_event_layout"
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@color/bdclean_green"
                        app:cardPreventCornerOverlap="true"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/details_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/joined_event_tv"
                                android:fontFamily="@font/roboto"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:padding="10dp" />

                            <TextView
                                android:id="@+id/event_name"
                                android:layout_below="@+id/details_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clean Bangladesh"
                                android:paddingHorizontal="5dp"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto"
                                android:textSize="14sp"/>

                            <TextView
                                android:layout_below="@+id/event_name"
                                android:id="@+id/event_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:text="Mega Event"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto"
                                android:textSize="12sp"/>

                            <TextView
                                android:layout_below="@+id/event_type"
                                android:id="@+id/event_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kawran Bazar, Dhaka"
                                android:textColor="@color/white_2"
                                android:paddingHorizontal="5dp"
                                android:fontFamily="@font/roboto"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/remaining_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto"
                                android:text="Remaining time"
                                android:padding="5dp"
                                android:layout_below="@+id/event_location"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/leave_event"
                                android:layout_height="30dp"
                                android:layout_below="@+id/remaining_time"
                                android:layout_width="match_parent"
                                android:background="@drawable/button_shape_7"
                                android:backgroundTint="@color/red"
                                android:text="@string/submit"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/roboto"
                                android:textAllCaps="false"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/about_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        app:cardCornerRadius="20dp"
                        android:elevation="5dp"
                        app:cardMaxElevation="6dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardPreventCornerOverlap="true">

                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/event_slider_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            app:sliderAnimationDuration="600"
                            app:sliderAutoCycleDirection="back_and_forth"
                            app:sliderIndicatorAnimationDuration="600"
                            app:sliderIndicatorEnabled="true"
                            app:sliderIndicatorGravity="center_horizontal|bottom"
                            app:sliderIndicatorMargin="15dp"
                            app:sliderIndicatorOrientation="horizontal"
                            app:sliderIndicatorPadding="3dp"
                            app:sliderIndicatorRadius="2dp"
                            app:sliderIndicatorSelectedColor="@color/bdclean_greenDark"
                            app:sliderIndicatorUnselectedColor="@color/green_3"
                            app:sliderScrollTimeInSec="1"/>

                            <ImageView
                                android:id="@+id/about_cover_photo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/cover_photo"
                                android:scaleType="fitXY"
                                android:visibility="visible"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/about_card_view_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:elevation="5dp"
                        app:cardMaxElevation="6dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/member_btn_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/member_btn"
                                    android:layout_width="183dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/button_shape_1"
                                    android:backgroundTint="@color/red"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/be_a_member"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white_2"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/of"
                                    android:textColor="@color/white_2"
                                    android:layout_gravity="center"
                                    android:paddingVertical="5dp"
                                    android:fontFamily="@font/roboto"
                                    android:textSize="14sp"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bdclean_name"
                                android:textColor="@color/white_2"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto_black"
                                android:textSize="20dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:justificationMode="inter_word"
                                android:text="@string/dream_to_clean_bangladesh"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/about_card_view_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:elevation="5dp"
                        app:contentPadding="10dp"
                        android:layout_marginTop="10dp"
                        app:cardMaxElevation="6dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:padding="5dp"
                                android:text="@string/description"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto"/>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/about_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:elevation="5dp"
                        app:contentPadding="10dp"
                        app:cardMaxElevation="6dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_horizontal">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:paddingHorizontal="2dp"
                                    android:justificationMode="inter_word"
                                    android:text="@string/base"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/white_2"/>



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:paddingHorizontal="2dp"
                                    android:justificationMode="inter_word"
                                    android:text="@string/base_text"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="center"
                                    android:textColor="@color/white_2" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_horizontal">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:justificationMode="inter_word"
                                    android:text="@string/founder"
                                    android:fontFamily="@font/roboto"
                                    android:layout_gravity="center"
                                    android:paddingHorizontal="2dp"
                                    android:gravity="start"
                                    android:textColor="@color/white_2"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:paddingHorizontal="2dp"
                                    android:justificationMode="inter_word"
                                    android:text="@string/founder_text"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="center"
                                    android:textColor="@color/white_2"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_horizontal">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/slogan"
                                    android:textColor="@color/white_2"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:paddingHorizontal="2dp"
                                    android:fontFamily="@font/roboto"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/roboto"
                                    android:paddingHorizontal="2dp"
                                    android:justificationMode="inter_word"
                                    android:text="@string/slogan_text"
                                    android:textColor="@color/white_2"

                                    />


                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:elevation="5dp"
                        android:layout_marginTop="10dp"
                        app:contentPadding="10dp"
                        app:cardMaxElevation="6dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_black"
                                android:paddingHorizontal="5dp"
                                android:text="@string/date_of_establishment"
                                android:textColor="@color/white_2"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/roboto"
                                android:justificationMode="inter_word"
                                android:paddingHorizontal="5dp"
                                android:text="@string/establishment_text"
                                android:textColor="@color/white_2"
                                android:textSize="15sp"

                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/about_card_view_3"
                        android:layout_below="@+id/about_card_view_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:contentPadding="10dp"
                        android:elevation="5dp"
                        app:cardMaxElevation="6dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/goal"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto_black"
                                android:paddingHorizontal="5dp"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:justificationMode="inter_word"
                                android:text="@string/goal_txt"
                                android:paddingHorizontal="5dp"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/about_card_view_4"
                        android:layout_below="@+id/about_card_view_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:contentPadding="10dp"
                        android:elevation="5dp"
                        app:cardMaxElevation="6dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/purpose"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto_black"
                                android:paddingHorizontal="5dp"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:justificationMode="inter_word"
                                android:text="@string/purpose_txt"
                                android:paddingHorizontal="5dp"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:elevation="5dp"
                        app:contentPadding="10dp"
                        app:cardMaxElevation="6dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardBackgroundColor="@color/bdclean_green"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/characteristics"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto_black"
                                android:paddingHorizontal="5dp"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:justificationMode="inter_word"
                                android:text="@string/history_txt"
                                android:paddingHorizontal="5dp"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:contentPadding="10dp"
                        android:elevation="5dp"
                        app:cardMaxElevation="6dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/membership_qualification"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto_black"
                                android:paddingHorizontal="5dp"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:justificationMode="inter_word"
                                android:text="@string/changes_txt"
                                android:textColor="@color/white_2"
                                android:paddingHorizontal="5dp"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:contentPadding="10dp"
                        android:elevation="5dp"
                        app:cardMaxElevation="6dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/oath"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto_black"
                                android:paddingHorizontal="5dp"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:justificationMode="inter_word"
                                android:text="@string/oath_text"
                                android:textColor="@color/white_2"
                                android:paddingHorizontal="5dp"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:contentPadding="10dp"
                        android:elevation="5dp"
                        app:cardMaxElevation="6dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bd_clean_series_of_activities"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto_black"
                                android:paddingHorizontal="5dp"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:justificationMode="inter_word"
                                android:text="@string/activity_seris_text"
                                android:textColor="@color/white_2"
                                android:paddingHorizontal="5dp"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:contentPadding="10dp"
                        android:elevation="5dp"
                        app:cardMaxElevation="6dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/benefits_of_a_clean_bangladesh"
                                android:textColor="@color/white_2"
                                android:fontFamily="@font/roboto_black"
                                android:paddingHorizontal="5dp"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:textSize="15sp"
                                android:justificationMode="inter_word"
                                android:text="@string/benefit_text"
                                android:textColor="@color/white_2"
                                android:paddingHorizontal="5dp"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/member_type_layout_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/honorary_member2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="45dp"
                            android:background="@drawable/button_shape_5"
                            android:text="@string/be_a_honorary_member"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:layout_marginHorizontal="3dp"
                            android:fontFamily="@font/roboto_black"
                            android:textColor="@color/white"/>

                        <Button
                            android:id="@+id/goodwill2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="45dp"
                            android:background="@drawable/button_shape_6"
                            android:text="@string/goodwill_ambassador"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto_black"
                            android:textSize="12sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/continue_user_btn"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/red"
                            android:background="@drawable/button_shape_1"
                            android:fontFamily="@font/roboto"
                            android:text="@string/continue_to_next_step"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>