<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvaluationDetailsActivity"
    android:background="@drawable/activity_background_4">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="@string/evaluation_details"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/green_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
        android:id="@+id/status_card_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        android:backgroundTint="#b0d234"
        app:cardCornerRadius="15dp"
        app:contentPaddingRight="15dp"
        app:contentPaddingTop="7dp"
        app:contentPaddingBottom="5dp"
        app:contentPaddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        android:layout_below="@+id/custom_toolbar">

        <LinearLayout
            android:id="@+id/layout_3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status_ev"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/approval_status"
                    android:fontFamily="@font/bdclean_bold"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginEnd="20dp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/approval_details_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/ev_details_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/approval_details_iv"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:fontFamily="@font/bdclean_bold"
                    android:textColor="@color/white"/>

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_card_2"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        android:backgroundTint="@color/cardBgLight"
        app:cardCornerRadius="15dp"
        app:contentPaddingRight="15dp"
        app:contentPaddingTop="7dp"
        app:contentPaddingBottom="5dp"
        app:contentPaddingLeft="15dp"
        android:layout_marginBottom="15dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_toolbar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/subject"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean_bold"/>

                    <TextView
                        android:id="@+id/ev_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:justificationMode="inter_word"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/description_tv"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean_bold"/>

                    <TextView
                        android:id="@+id/ev_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:justificationMode="inter_word"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/evaluated_by"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean_bold"/>

                    <TextView
                        android:id="@+id/ev_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/evaluated_to"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean_bold"/>

                    <TextView
                        android:id="@+id/ev_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/evaluated_for"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean_bold"/>

                    <TextView
                        android:id="@+id/ev_for"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean_bold"/>

                    <TextView
                        android:id="@+id/ev_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/comment"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean_bold"/>

                    <TextView
                        android:id="@+id/comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bdclean"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="4dp"
        android:gravity="center"
        android:layout_below="@+id/card_1"
        android:layout_height="wrap_content">

<!--        <Button-->
<!--            android:id="@+id/status_btn"-->
<!--            android:layout_width="180dp"-->
<!--            android:background="@drawable/login_btn"-->
<!--            android:layout_gravity="center"-->
<!--            android:textAllCaps="false"-->
<!--            android:gravity="center"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="14sp"-->
<!--            android:textStyle="bold"-->
<!--            android:visibility="gone"-->
<!--            android:layout_height="35dp"/>-->

        <Button
            android:id="@+id/disApprove_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/reject"
            android:background="@drawable/button_shape_5"
            android:drawableStart="@drawable/icon_cancel"
            android:paddingStart="30dp"
            android:textAllCaps="false"
            android:paddingEnd="30dp"
            android:textSize="12sp"
            android:layout_height="35dp"/>

        <Button
            android:id="@+id/approve_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/approve"
            android:textAllCaps="false"
            android:background="@drawable/button_shape_6"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_baseline_check_circle_24"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_height="35dp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:indeterminateTint="@color/red" />

</RelativeLayout>