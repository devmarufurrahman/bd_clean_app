<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:id="@+id/drawer"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_container"
        android:background="@drawable/activity_background_1">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_4"
            app:title=" "
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="5dp">

                <include
                    layout="@layout/language_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <include
                    android:id="@+id/messengerBell"
                    layout="@layout/messengar_icon_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginHorizontal="5dp" />

                <include
                    android:id="@+id/notificationBell"
                    layout="@layout/notification_icon_layout"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="7dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:id="@+id/home_card_3"
            android:layout_below="@+id/custom_toolbar"
            android:layout_width="match_parent"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/green_4"
            android:layout_marginVertical="5dp"
            app:contentPadding="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/profile_photo_background_2"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_photo"
                        android:layout_width="94dp"
                        android:layout_height="94dp"
                        android:src="@drawable/cover_pic"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_2"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:layout_gravity="start"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white_2"/>

                        <ImageView
                            android:id="@+id/status_iv"
                            android:layout_width="45px"
                            android:layout_height="45px"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/profile_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/white_2"
                        android:fontFamily="@font/bdclean"
                        android:text="User Level"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/profile_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/white_2"
                        android:fontFamily="@font/bdclean"
                        android:text="User ID"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/user_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/white_2"
                        android:fontFamily="@font/bdclean"
                        android:text="Address"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/member_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/white_2"
                        android:fontFamily="@font/bdclean"
                        android:text="User Since: January 20, 2023"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_card_3"
            android:layout_above="@+id/bottomNavView"
            android:layout_marginBottom="70dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/home_card"
                    android:layout_below="@+id/home_card_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/bdclean"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/edittext_background"
                        android:text="@string/member_activity"
                        android:layout_marginVertical="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white_2"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="15dp"
                        android:weightSum="4"
                        android:layout_gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/event_btn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="65dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_event"
                                    android:scaleType="fitCenter"/>

                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/events"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/social_media_btn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="55dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_social_media"
                                    android:scaleType="centerCrop"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/social_media"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_activity"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="55dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_my_activity"
                                    android:scaleType="centerCrop"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_activity"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/member_status"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="55dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_member_status"
                                    android:scaleType="centerCrop"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/member_status"
                                android:gravity="center"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:gravity="start"
                        android:layout_marginVertical="25dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/notice_btn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/notice_icon"
                                    android:scaleType="centerCrop"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/notice"
                                android:textColor="@color/white_2"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/activity_log"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_activity_log"
                                    android:scaleType="centerCrop"/>

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="centerCrop" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/activity_log"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"

                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:id="@+id/store_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/store_btn"
                                    android:scaleType="centerCrop"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/store"
                                android:textColor="@color/white_2"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/message_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:id="@+id/message_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_message" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/message"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:layout_marginTop="15dp"
                        android:gravity="start"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/migration_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="55dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/migration_icon"
                                    android:scaleType="centerCrop"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Migration"
                                android:gravity="center"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/leave_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:src="@drawable/leave_icon"
                                    android:scaleType="fitCenter"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Leave"
                                android:gravity="center"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/complain_btn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_complain"/>

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="centerCrop" />


                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/complain"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"

                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vote_btn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_election"
                                    android:scaleType="centerCrop"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/election"
                                android:textColor="@color/white_2"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_card"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/administrative_activity"
                        android:background="@drawable/edittext_background"
                        android:layout_marginVertical="25dp"
                        android:textColor="@color/white_2"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:paddingHorizontal="10dp"
                        android:fontFamily="@font/bdclean"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginBottom="20dp"
                        android:weightSum="4"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/evaluation_btn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_evaluation"
                                    android:scaleType="centerCrop"/>

                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/evaluation"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/manage_leave"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/manage_leave_icon"
                                    android:scaleType="fitCenter"/>

                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage Leave"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/manage_notice_btn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_manage_notice"
                                    android:scaleType="fitXY"/>


                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage Notice"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/member_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:id="@+id/members_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_member"
                                    android:scaleType="fitCenter"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/member"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_marginTop="20dp"
                        android:weightSum="4">


                        <LinearLayout
                            android:id="@+id/event_mng_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:id="@+id/event_mng_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_manage_event"
                                    android:scaleType="fitCenter"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/manage_event"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/post_mng_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:id="@+id/post_mng_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_manage_post" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/manage_post"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/chat_layout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:id="@+id/chat_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_chat"
                                    android:scaleType="fitXY"/>

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="centerCrop" />

                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chat_group"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:fontFamily="@font/bdclean"
                                android:textAllCaps="false"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

        </ScrollView>




        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/transparent_shape"
            android:elevation="5dp"
            android:visibility="visible"
            app:itemIconTint="@color/white"
            app:labelVisibilityMode="unlabeled"
            app:itemIconSize="50dp"
            app:itemPaddingBottom="2dp"
            app:menu="@menu/bottom_nav_menu"/>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_menu"
        app:menu="@menu/main_menu"
        android:layout_marginBottom="60dp"
        app:headerLayout="@layout/main_menu_header"
        android:paddingBottom="96dp"
        android:layout_gravity="start"
        android:visibility="visible"/>

