<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewMemberActivity"
    android:background="@drawable/activity_background_4">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="@string/create_new_member"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white_2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/green_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/layout_1">

        <TextView
            android:id="@+id/new_member_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/member_designation"
            android:textColor="@color/white_2"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="@font/bdclean_bold"/>

        <TextView
            android:id="@+id/position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/new_member_tv"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:text="@string/member"
            android:textColor="@color/white_2"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:padding="10dp"
            android:fontFamily="@font/bdclean_bold"/>


    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_v"
        android:layout_below="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/member_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:hint="@string/certificate_name"
                android:paddingHorizontal="15dp"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:fontFamily="@font/bdclean"
                android:inputType="text"/>

            <EditText
                android:id="@+id/member_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/bdclean"
                android:hint="@string/email"
                android:paddingHorizontal="15dp"/>

            <EditText
                android:id="@+id/member_contact"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:hint="@string/phone_number"
                android:paddingHorizontal="15dp"
                android:fontFamily="@font/bdclean"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/member_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/present_address"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:inputType="textMultiLine"/>

            <EditText
                android:id="@+id/father_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:inputType="textPersonName"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/father_name"/>

            <EditText
                android:id="@+id/mother_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/mother_name"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:inputType="textPersonName"/>


            <EditText
                android:id="@+id/father_contact"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:layout_height="50dp"
                android:inputType="phone"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/father_contact"/>


            <EditText
                android:id="@+id/mother_contact"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:layout_height="50dp"
                android:inputType="phone"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/mother_contact"/>

            <EditText
                android:id="@+id/nationality"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/nationality"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:layout_height="50dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/education"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/highest_education"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:layout_height="50dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/education_institute"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:layout_height="50dp"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/highest_education_institute_name"
                android:inputType="text"/>

            <EditText
                android:id="@+id/current_institute"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/current_job_work_institute_name"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:layout_height="50dp"
                android:inputType="text"/>

            <EditText
