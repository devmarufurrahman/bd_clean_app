                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:hint="@string/confirm_password"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/hint_color"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/date_birth"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape_7"
                android:backgroundTint="@color/white"
                android:text="@string/date_of_birth"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="@font/bdclean"
                android:textColor="@color/text_color"/>

            <LinearLayout
                android:id="@+id/reg_ll_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_background"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/choose_gender"
                        android:gravity="center"
                        android:fontFamily="@font/bdclean"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textColor="@color/hint_color"
                        android:padding="5dp"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/gender_spinner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="@color/white_2"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:drawableEnd="@drawable/icon_dropdown"
                        android:paddingHorizontal="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/blood_group"
                        android:gravity="center"
                        android:fontFamily="@font/bdclean"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textColor="@color/hint_color"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/blood_group"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white_2"
                        android:background="@null"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:drawableEnd="@drawable/icon_dropdown"
                        android:paddingHorizontal="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/shirt_size"
                        android:gravity="center"
                        android:fontFamily="@font/bdclean"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textColor="@color/hint_color"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/shirt_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white_2"
                        android:background="@null"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:drawableEnd="@drawable/icon_dropdown"
                        android:paddingHorizontal="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_background"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/choose_religion"
                        android:gravity="center"
                        android:fontFamily="@font/bdclean"
                        android:textColor="@color/hint_color"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/religion_spinner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white_2"
                        android:background="@null"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:drawableEnd="@drawable/icon_dropdown"
                        android:paddingHorizontal="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_background"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/choose_occupation"
                        android:gravity="center"
                        android:fontFamily="@font/bdclean"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="@color/hint_color"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/occupation_spinner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white_2"
                        android:background="@null"
                        android:textSize="14sp"
                        android:drawableEnd="@drawable/icon_dropdown"
                        android:paddingHorizontal="20dp"
                        android:textAllCaps="false"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/division_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/division"
                    android:fontFamily="@font/bdclean"
                    android:layout_gravity="center"
                    android:textColor="@color/hint_color"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/division_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white_2"
                    android:background="@null"
                    android:textSize="12sp"
                    android:drawableEnd="@drawable/icon_dropdown"
                    android:paddingHorizontal="20dp"
                    android:textAllCaps="false"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/location_type_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="10dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/city_dialog_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_2"
                        android:buttonTint="@color/white_2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/city_corporation"/>
                    <RadioButton
                        android:id="@+id/district_dialog_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_2"
                        android:buttonTint="@color/white_2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/district"/>
                </RadioGroup>

            </LinearLayout>





            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/district_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/district"
                    android:gravity="center"
                    android:fontFamily="@font/bdclean"
                    android:textColor="@color/hint_color"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/district_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white_2"
                    android:background="@null"
                    android:textSize="14sp"
