                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/union_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white_2"
                    android:background="@null"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/icon_dropdown"
                    android:paddingHorizontal="20dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wardLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:id="@+id/ward_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/ward"
                    android:fontFamily="@font/bdclean"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/ward_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white_2"
                    android:background="@null"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/icon_dropdown"
                    android:paddingHorizontal="20dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/villageLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:id="@+id/village_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/ward_village"
                    android:fontFamily="@font/bdclean"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/village_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:textColor="@color/white_2"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/icon_dropdown"
                    android:paddingHorizontal="20dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/parent_member"
                    android:fontFamily="@font/bdclean"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/hint_color"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/parent_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white_2"
                    android:background="@null"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/icon_dropdown"
                    android:paddingHorizontal="20dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/layout_shape_2"
                android:backgroundTint="@color/white"
                android:layout_marginTop="15dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_profile_photo"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="@font/bdclean_bold"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/member_photo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/icon_camera" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:padding="5dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:text="@string/cancel"
                    android:textColor="@color/white_2"
                    android:backgroundTint="@color/red"
                    android:background="@drawable/button_shape_5"/>

                <Button
                    android:id="@+id/create_member"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:textColor="@color/white_2"
                    android:backgroundTint="@color/green_2"
                    android:background="@drawable/button_shape_6"
                    android:text="@string/create_member"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:indeterminateTint="@color/red" />

</RelativeLayout>