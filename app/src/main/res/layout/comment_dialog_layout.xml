<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/green_4"/>

        <ImageView
            android:id="@+id/bd_clean_logo"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/bdclean_logo_3"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/bd_clean_logo"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:padding="10dp"
            android:background="@color/bdclean_green"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:text="@string/provide_the_reason_for_your_rejection"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@null"
                    android:fontFamily="@font/bdclean_bold"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/comment_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_shape"
                    android:inputType="text|textMultiLine"
                    android:textSize="14sp"
                    android:minHeight="50dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/icon_name"/>

            </LinearLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="150dp"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:fontFamily="@font/bdclean_bold"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape_1"
                android:layout_height="35dp"/>

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>