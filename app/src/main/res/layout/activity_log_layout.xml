<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/logLayout"
app:cardUseCompatPadding="true"
app:cardPreventCornerOverlap="true"
app:cardMaxElevation="1dp"
app:cardElevation="1dp"
app:contentPadding="5dp"
app:cardBackgroundColor="@color/bdclean_green">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="5dp"
    android:gravity="center"
    android:background="@drawable/imageview_background"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingStart="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/log_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:text="Log Name"
            android:gravity="start"
            android:textColor="@color/white"
            android:fontFamily="@font/bdclean_bold"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="@string/type"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/bdclean"/>

            <TextView
                android:id="@+id/log_type"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/bdclean"
                android:text="Log type" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/bdclean"/>

            <TextView
                android:id="@+id/log_date"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/bdclean"
                android:text="log_date" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>