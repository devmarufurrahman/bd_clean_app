<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="false"
    app:cardMaxElevation="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:contentPadding="10dp"
    app:cardBackgroundColor="@color/bdclean_green">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/imageview_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/cm_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/subject"
            android:fontFamily="@font/bdclean_bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/create_by"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="@font/bdclean"/>

            <TextView
                android:id="@+id/cm_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/bdclean"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/approval_body"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/bdclean"/>

            <TextView
                android:id="@+id/cm_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/report_for"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/bdclean"/>

            <TextView
                android:id="@+id/cm_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/submit_date"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/bdclean"/>

            <TextView
                android:id="@+id/cm_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/bdclean_bold"/>

            <TextView
                android:id="@+id/cm_status"
                android:layout_width="200dp"
                android:layout_height="23dp"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:padding="4dp"
                android:gravity="center"
                android:background="@drawable/approve_post_background"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>