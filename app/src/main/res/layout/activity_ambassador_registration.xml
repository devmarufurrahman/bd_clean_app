                        android:textColor="@color/white_2"
                        android:padding="5dp"
                        android:fontFamily="@font/roboto"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginHorizontal="30dp"
