<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegPage_4Fragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="BD CLEAN"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_2"/>

    <ImageView
        android:id="@+id/reg_iv"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/custom_toolbar"
        android:src="@drawable/bd_clean_logo" />

    <TextView
        android:id="@+id/reg_page_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/member_registration"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/reg_iv"
        android:textColor="@color/green_2"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/reg_page_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_below="@+id/reg_page_tv"
        android:text="Location Information"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:textColor="@color/green_2"/>



    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/reg_page_tv2"
        android:padding="4dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/choose_monitor"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/division_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/ll_1"
        android:padding="4dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Select District"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/district_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/ll_2"
        android:padding="4dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Select Upazilla"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/upazilla_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/ll_3"
        android:padding="4dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Select Union"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/union_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/ll_4"
        android:padding="4dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Select Village"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/village_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_2"/>

    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/ll_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:weightSum="3">

        <Button
            android:id="@+id/reg_cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginHorizontal="2dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:background="@drawable/button_shape_2"/>

        <Button
            android:id="@+id/reg_back_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="@string/back"
            android:textColor="@color/black"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button_shape_3"/>

        <Button
            android:id="@+id/reg_next_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="@color/green_2"
            android:background="@drawable/button_shape_1"
            android:text="@string/next"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/red" />

</RelativeLayout>