            <androidx.cardview.widget.CardView
                android:id="@+id/event_details_card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardMaxElevation="2dp"
                app:cardPreventCornerOverlap="true"
                android:backgroundTint="@color/cardBgLight"
                app:cardCornerRadius="15dp"
                app:contentPaddingRight="15dp"
                app:contentPaddingTop="5dp"
                app:contentPaddingBottom="5dp"
                app:contentPaddingLeft="15dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                >

                <LinearLayout
                    android:id="@+id/layout_1"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_detail"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/details"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/event_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_type"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/type"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/event_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_calendar"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/from"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/event_start_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_calendar"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/to"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/event_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_venue"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/venue"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/event_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_venue"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/division"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/event_division"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_venue"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/district"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/event_district"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_venue"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/upazila"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/event_upazila"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_venue"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/union"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/event_union"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_venue"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/village"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/event_village"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"/>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/icon_name"
                            app:tint="@color/white"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/comment"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean_bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/event_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/bdclean"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/red" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/layout_2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="5dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/approve"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/approve"
                    android:background="@drawable/button_shape_5"
                    android:textSize="12sp"
                    android:backgroundTint="@color/bdclean_greenDark"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_baseline_check_circle_24"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:layout_marginEnd="2dp"
                    android:layout_height="35dp"/>

                <Button
                    android:id="@+id/reject"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/reject"
                    android:background="@drawable/button_shape_6"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/icon_cancel"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:textSize="12sp"
                    android:layout_marginStart="2dp"
                    android:layout_height="35dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ListView
        android:id="@+id/member_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scroll_v"
        android:nestedScrollingEnabled="false"
        android:layout_margin="10dp"
        android:dividerHeight="5dp"
        android:scrollbars="none"
        android:divider="@null"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="150dp"
        app:backgroundTint="@color/white"
        android:src="@drawable/icon_edit"
        android:visibility="gone"
        app:fabSize="auto" />

</RelativeLayout>