    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="@string/manage_event"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/green_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/scroll_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_below="@+id/custom_toolbar"
                android:layout_marginTop="3dp"
                android:id="@+id/layout"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/event_photo"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="200dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/event_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/name"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/bdclean_bold"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/status_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardMaxElevation="2dp"
                app:cardPreventCornerOverlap="true"
                android:backgroundTint="@color/statusCardBg"
                app:cardCornerRadius="15dp"
                app:contentPaddingRight="15dp"
                app:contentPaddingTop="3dp"
                app:contentPaddingBottom="5dp"
                app:contentPaddingLeft="15dp"
                android:layout_marginTop="5dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/status_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/approval_status"
                        android:textSize="14sp"
                        android:fontFamily="@font/bdclean_bold"
                        android:textAllCaps="false"
                        android:padding="5dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/event_active_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:fontFamily="@font/bdclean_bold"
                        android:textAllCaps="false"
                        android:padding="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


