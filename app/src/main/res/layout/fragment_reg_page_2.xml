<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegPage_2Fragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="BD CLEAN"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_2"/>

    <ImageView
        android:id="@+id/reg_iv"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/custom_toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bd_clean_logo"/>

    <TextView
        android:id="@+id/reg_page_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/member_registration"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_iv"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/green_2"/>
    <TextView
        android:id="@+id/reg_page_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_below="@+id/reg_page_tv"
        android:text="Your basic information"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:textColor="@color/green_2"/>

    <LinearLayout
        android:id="@+id/reg_ll_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_page_tv2"
        android:padding="4dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/choose_gender"
                android:gravity="left"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:backgroundTint="@color/green_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/choose_religion"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/religion_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:backgroundTint="@color/green_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/choose_occupation"
                android:gravity="left"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/occupation_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_2"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/reg_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:weightSum="3">

        <Button
            android:id="@+id/reg_cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginHorizontal="2dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:background="@drawable/button_shape_2"/>

        <Button
            android:id="@+id/reg_back_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="@string/back"
            android:textColor="@color/black"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button_shape_3"/>

        <Button
            android:id="@+id/reg_next_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="@color/green_2"
            android:background="@drawable/button_shape_1"
            android:text="@string/next"/>

    </LinearLayout>

</RelativeLayout>