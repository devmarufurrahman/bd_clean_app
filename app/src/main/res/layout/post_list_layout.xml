<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/bdclean_green"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/imageview_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bdclean_bold"
                android:paddingStart="3dp"
                android:paddingBottom="3dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/post_date"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/bdclean"
                android:paddingLeft="3dp"
                android:paddingBottom="3dp"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_shape"
                android:fontFamily="@font/bdclean"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/green_2"
            android:weightSum="3"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/post_status"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/approve_post_background"
                android:fontFamily="@font/bdclean"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:layout_weight="2"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:text="@string/click_to_view"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="12sp"
                android:fontFamily="@font/bdclean_bold"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="30dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>