<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="595dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/green_4"/>

        <ImageView
            android:id="@+id/sign_up_logo"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/bdclean_logo_3"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_below="@+id/sign_up_logo"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <WebView
                android:id="@+id/post_view"
                android:layout_width="match_parent"
                android:layout_height="400dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/statusBtn"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="35dp"
                    android:background="@drawable/button_shape_2"
                    android:backgroundTint="@color/grey_1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <Button
                    android:id="@+id/reject_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:background="@drawable/button_shape_5"
                    android:backgroundTint="@color/red"
                    android:layout_gravity="center"
                    android:text="@string/reject"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/approve_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:background="@drawable/button_shape_6"
                    android:backgroundTint="@color/green_1"
                    android:layout_gravity="center"
                    android:text="@string/approve"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/close_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/green_2"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="@string/close"
            android:textSize="18sp"
            android:fontFamily="@font/bdclean_bold"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>