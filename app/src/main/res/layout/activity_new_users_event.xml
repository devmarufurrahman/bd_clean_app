<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background_4"
    tools:context=".NewUsersEventActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="@string/event_details"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_2">

        <Button
            android:id="@+id/log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/button_shape_1"
            android:drawableEnd="@drawable/ic_baseline_logout_24"
            android:paddingEnd="20dp"/>


        <TextView
            android:id="@+id/event_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:background="@drawable/button_shape_2"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_black"/>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/cover_photo"
        android:layout_width="match_parent"
        android:layout_below="@+id/custom_toolbar"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/about_card_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:contentPadding="10dp"
        android:layout_below="@+id/cover_photo"
        app:cardMaxElevation="6dp"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="@color/bdclean_green"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name "
                android:textColor="@color/white_2"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:justificationMode="inter_word"
                android:padding="5dp"
                android:fontFamily="@font/roboto_black"/>




        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/about_card_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:contentPadding="10dp"
        android:layout_below="@+id/about_card_view_1"
        app:cardMaxElevation="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="@color/bdclean_green"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/join_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="join_time"
                android:layout_gravity="center"
                android:textColor="@color/white_2"
                android:textSize="14sp"
                android:padding="5dp"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_card_view_2"
        app:cardBackgroundColor="@color/bdclean_green"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        android:id="@+id/card_1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date_time"
                android:layout_gravity="center"
                android:textColor="@color/white_2"
                android:textSize="14sp"
                android:padding="5dp"
                android:fontFamily="@font/roboto"/>


            <TextView
                android:id="@+id/event_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:textColor="@color/white_2"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:fontFamily="@font/roboto"/>


            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textAllCaps="true"
                android:textColor="@color/white_2"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:padding="5dp"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_1"
        app:cardBackgroundColor="@color/bdclean_green"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_marginHorizontal="10dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        android:id="@+id/card_3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Details:"
                android:layout_gravity="start"
                android:textColor="@color/white_2"
                android:textSize="16sp"
                android:padding="5dp"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:id="@+id/details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="........"
                android:layout_gravity="center"
                android:textColor="@color/white_2"
                android:textSize="14sp"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:padding="5dp"
                android:fontFamily="@font/roboto_black"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_3"
        android:id="@+id/ll_1"
        android:layout_marginHorizontal="10dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/join_btn"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/bdclean_greenDark"
            android:layout_weight="1"
            android:background="@drawable/button_shape_5"
            android:text="@string/join_event"
            android:textSize="12sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/leave_btn"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/red"
            android:layout_weight="1"
            android:background="@drawable/button_shape_6"
            android:text="@string/leave_event"
            android:textSize="12sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_2"
        app:cardElevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@null"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_of_event_completed"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_black"/>

            <TextView
                android:id="@+id/joined_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="#2b4c77"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_black"/>

        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>