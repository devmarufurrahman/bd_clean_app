<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_height="wrap_content"
app:cardCornerRadius="10dp"
app:cardUseCompatPadding="true"
android:layout_marginHorizontal="10dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@color/green_4"/>

    <ImageView
        android:id="@+id/sign_up_logo"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/bdclean_logo_3"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_below="@+id/sign_up_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:minHeight="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/membership_requirement"
                    android:background="@drawable/button_shape_1"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="3dp"
            android:scrollbars="none">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardPreventCornerOverlap="true"
                app:cardMaxElevation="2dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="false"
                app:contentPadding="10dp"
                app:cardBackgroundColor="#d6ecc6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="start"
                        android:justificationMode="inter_word"
                        android:padding="5dp"
                        android:text="@string/terms_tv_1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/step_1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/step_tv_1"
                            android:justificationMode="inter_word"
                            android:paddingHorizontal="5dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/step_2"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/step_tv_2"
                            android:justificationMode="inter_word"
                            android:paddingHorizontal="5dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/step_3"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/step_tv_3"
                            android:justificationMode="inter_word"
                            android:textColor="@color/black"
                            android:paddingHorizontal="5dp"
                            android:textSize="14sp"/>
                    </LinearLayout>

<!--                    <LinearLayout-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:orientation="vertical">-->
<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/step_4"-->
<!--                            android:textColor="@color/black"-->
<!--                            android:textSize="16sp"-->
<!--                            android:fontFamily="@font/roboto_black"/>-->
<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/step_tv_3"-->
<!--                            android:justificationMode="inter_word"-->
<!--                            android:textColor="@color/black"-->
<!--                            android:paddingHorizontal="5dp"-->
<!--                            android:textSize="14sp"/>-->
<!--                    </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_policy"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_policy_tv"
                            android:justificationMode="inter_word"
                            android:textColor="@color/black"
                            android:paddingHorizontal="5dp"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/term_of_service"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/term_of_service_tv"
                            android:justificationMode="inter_word"
                            android:textColor="@color/black"
                            android:paddingHorizontal="5dp"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingHorizontal="5dp"
                            android:paddingVertical="8dp"
                            android:text="@string/terms1"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="5dp"
                            android:text="@string/terms2"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingVertical="8dp"
                            android:text="@string/terms3"
                            android:textColor="@color/black"
                            android:paddingHorizontal="5dp"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingVertical="8dp"
                            android:text="@string/terms4"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:paddingHorizontal="5dp"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingVertical="8dp"
                            android:text="@string/terms5"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:paddingHorizontal="5dp"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingVertical="8dp"
                            android:text="@string/terms6"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:paddingHorizontal="5dp"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingVertical="8dp"
                            android:text="@string/terms7"
                            android:textColor="@color/black"
                            android:justificationMode="inter_word"
                            android:textSize="14sp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/consent_for_reference"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/consent_for_reference_tv"
                            android:justificationMode="inter_word"
                            android:textColor="@color/black"
                            android:paddingHorizontal="5dp"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:gravity="center_horizontal">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:id="@+id/terms_check_box"
                            android:layout_weight="1"
                            android:buttonTint="@color/bdclean_greenDark"/>

                        <Button
                            android:id="@+id/continue_btn"
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:layout_height="30dp"
                            android:text="@string/i_agree_with_terms_and_conditions"
                            android:background="@drawable/circle_background"
                            android:textSize="12sp"
                            android:layout_marginHorizontal="1dp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/bdclean_greenDark"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>

</androidx.cardview.widget.CardView>