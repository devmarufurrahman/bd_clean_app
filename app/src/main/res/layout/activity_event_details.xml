<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background_4"
    tools:context=".EventDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="@string/event_details"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/green_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swiperefresh2"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/details_image_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:elevation="5dp"
            app:cardMaxElevation="6dp"
            app:cardBackgroundColor="@color/bdclean_green"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:id="@+id/event_photo"
                android:layout_width="match_parent"
                android:layout_below="@+id/custom_toolbar"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="false"/>


        </androidx.cardview.widget.CardView>

            <ScrollView
                android:id="@+id/eventDetailsScoll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/about_card_view_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:elevation="5dp"
                        app:contentPadding="10dp"
                        app:cardMaxElevation="6dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/event_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name "
                                android:textColor="@color/white_2"
                                android:textSize="20sp"
                                android:textAllCaps="false"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:justificationMode="inter_word"
                                android:padding="5dp"
                                android:fontFamily="@font/bdclean_bold"/>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/about_card_view_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:elevation="5dp"
                        app:contentPadding="10dp"
                        app:cardMaxElevation="6dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardBackgroundColor="@color/bdclean_green"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="@string/joining_time"
                                android:layout_gravity="center"
                                android:textColor="@color/white_2"
                                android:textSize="14sp"
                                android:padding="5dp"
                                android:fontFamily="@font/bdclean_bold"/>

                            <TextView
                                android:id="@+id/join_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="join_time"
                                android:layout_gravity="center"
                                android:textColor="@color/white_2"
                                android:textSize="12sp"
                                android:padding="5dp"
                                android:fontFamily="@font/bdclean"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/bdclean_green"
                        app:cardUseCompatPadding="true"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="2dp"
                        app:cardMaxElevation="2dp"
                        app:cardPreventCornerOverlap="true"
                        android:id="@+id/card_1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="date_time"
                                android:layout_gravity="center"
                                android:textColor="@color/white_2"
                                android:textSize="14sp"
                                android:padding="5dp"
                                android:gravity="center"
                                android:fontFamily="@font/bdclean"/>


                            <TextView
                                android:id="@+id/event_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="address"
                                android:textColor="@color/white_2"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:fontFamily="@font/bdclean"/>


                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textAllCaps="false"
                                android:textColor="@color/white_2"
                                android:layout_gravity="center"
                                android:textSize="16sp"
                                android:padding="5dp"
                                android:fontFamily="@font/bdclean_bold"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_1"
                        app:cardBackgroundColor="@color/bdclean_green"
                        app:cardUseCompatPadding="true"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardMaxElevation="2dp"
                        app:cardPreventCornerOverlap="true"
                        android:id="@+id/card_3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


<!--                            <TextView-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:text="@string/event_details"-->
<!--                                android:layout_gravity="start"-->
<!--                                android:textColor="@color/white_2"-->
<!--                                android:textSize="16sp"-->
<!--                                android:padding="5dp"-->
<!--                                android:fontFamily="@font/bdclean_bold"/>-->

                            <TextView
                                android:id="@+id/details_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="........"
                                android:layout_gravity="center"
                                android:textColor="@color/white_2"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:justificationMode="inter_word"
                                android:padding="5dp"
                                android:fontFamily="@font/bdclean"/>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_1"
                        android:layout_marginHorizontal="10dp"
                        android:weightSum="2"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/join_btn"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/bdclean_greenDark"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape_5"
                            android:text="@string/join_event"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"/>

                        <Button
                            android:id="@+id/leave_btn"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/red"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape_6"
                            android:text="@string/leave_event"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/red" />

</RelativeLayout>