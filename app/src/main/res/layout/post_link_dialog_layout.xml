<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_height="wrap_content"
app:cardCornerRadius="10dp"
app:cardUseCompatPadding="false"
android:layout_marginHorizontal="10dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@color/green_4"/>

    <ImageView
        android:id="@+id/bd_clean_logo"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/bdclean_logo_3"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_below="@+id/bd_clean_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:text="@string/save_your_post_link_here"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:padding="10dp"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/roboto_black"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/post_link"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:hint="@string/post_link"
            android:textSize="12sp"
            android:paddingStart="10dp"/>

        <Button
            android:id="@+id/post_btn"
            android:layout_width="wrap_content"
            android:text="@string/save"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape_1"
            android:backgroundTint="@color/bdclean_greenDark"
            android:layout_height="25dp"/>

    </LinearLayout>

</RelativeLayout>

</androidx.cardview.widget.CardView>