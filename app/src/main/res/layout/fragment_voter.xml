<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PollingPanel.VoterFragment"
    android:background="@drawable/voter_fragment_bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:backgroundTint="#00FFFFFF"
        app:title="">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/white" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/election_position_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/election_positions"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:fontFamily="@font/bdclean_bold"
        android:layout_below="@+id/custom_toolbar"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/election_position_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_candidate_tv"
        android:textColor="@color/white"
        android:layout_below="@+id/election_position_tv"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/candidate_list"
        android:layout_below="@+id/election_position_tv3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/listview_divider"
        android:layout_above="@+id/submit_btn"
        android:layout_marginVertical="10dp"
        android:clickable="true"
        android:dividerHeight="5dp"/>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/next"
        android:fontFamily="@font/bdclean"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginVertical="10dp"
        android:background="@drawable/submit_button"/>

</RelativeLayout>