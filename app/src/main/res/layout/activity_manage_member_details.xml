<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageMemberDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="review member request"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_2"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/details_card_1"
        android:layout_below="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="4dp"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/details_card_2"
        android:layout_below="@+id/details_card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardMaxElevation="2dp"
        app:cardBackgroundColor="@color/cardBgLight"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto_black"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto_black"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto_black"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/user_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto_black"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/user_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="gender"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/occupation"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto_black"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/user_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="occupation"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto_black"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="address"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto_black"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/user_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="location"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/details_card_2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reject_btn"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/button_shape_5"
            android:backgroundTint="@color/red"
            android:text="@string/reject"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/approve_btn"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/button_shape_6"
            android:backgroundTint="@color/green_1"
            android:text="@string/approve"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_weight="1"/>


    </LinearLayout>

</RelativeLayout>