<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/bdclean_green"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/dialog_gif"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/event_complete_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_complete_tv"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:fontFamily="@font/bdclean_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_1"
            android:padding="10dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yes_btn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:background="@drawable/button_shape_5"
                android:text="@string/yes"
                android:textSize="12sp"
                android:textColor="#2b4c77"/>

            <Button
                android:id="@+id/no_btn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/red"
                android:layout_weight="1"
                android:background="@drawable/button_shape_6"
                android:text="@string/no"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>