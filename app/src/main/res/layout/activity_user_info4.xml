<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserInfoActivity_4">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="BD CLEAN"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_2">

        <TextView
            android:id="@+id/event_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:background="@drawable/button_shape_2"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_black"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/user_info_tv_1"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/layout_background"
        android:backgroundTint="@color/green_4"
        android:layout_centerHorizontal="true"
        android:justificationMode="inter_word"
        android:padding="10dp"
        android:layout_below="@+id/custom_toolbar"
        android:fontFamily="@font/bdclean_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tv_1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/reg_ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="select occupation"
                    android:textSize="12sp"
                    android:textColor="@color/green_2"/>

                <Button
                    android:id="@+id/select_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:text="occuaption"
                    android:drawableEnd="@drawable/icon_dropdown"
                    android:paddingHorizontal="20dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:text="present institution name"
                android:layout_marginEnd="10dp"
                android:textSize="10sp"
                android:textColor="@color/green_2"/>

            <EditText
                android:id="@+id/present_institution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icon_email_2"
                android:background="@drawable/text_field_shape"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:text="Highest education"
                android:layout_marginEnd="10dp"
                android:textSize="10sp"
                android:textColor="@color/green_2"/>

            <EditText
                android:id="@+id/education"
                android:layout_width="match_parent"
                android:drawablePadding="10dp"
                android:background="@drawable/text_field_shape"
                android:drawableStart="@drawable/icon_contact"
                android:layout_height="wrap_content"
                android:inputType="text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:text="Education institution name"
                android:layout_marginEnd="10dp"
                android:textSize="10sp"
                android:textColor="@color/green_2"/>

            <EditText
                android:id="@+id/education_institution"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/icon_address"
                android:drawablePadding="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_shape"
                android:inputType="text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:text="Present Address"
                android:layout_marginEnd="10dp"
                android:textSize="10sp"
                android:textColor="@color/green_2"/>

            <EditText
                android:id="@+id/present_address"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/icon_address"
                android:drawablePadding="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_shape"
                android:inputType="text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:text="Permanent Address"
                android:layout_marginEnd="10dp"
                android:textSize="10sp"
                android:textColor="@color/green_2"/>

            <EditText
                android:id="@+id/permanent_address"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/icon_address"
                android:drawablePadding="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_shape"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <Button
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:text="@string/back"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:background="@drawable/button_shape_5"/>

            <Button
                android:id="@+id/next_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:backgroundTint="@color/green_2"
                android:background="@drawable/button_shape_6"
                android:textColor="@color/white"
                android:text="@string/next"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>