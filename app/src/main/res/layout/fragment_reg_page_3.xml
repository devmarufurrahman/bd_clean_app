<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegPage_3Fragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        app:title="BD CLEAN"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_2"/>

    <ScrollView
        android:layout_below="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/reg_iv"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/bd_clean_logo"/>

            <TextView
                android:id="@+id/reg_page_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/member_registration"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/green_2"/>
            <TextView
                android:id="@+id/reg_page_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Your login credentials"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="@color/green_2"/>

            <LinearLayout
                android:id="@+id/reg_ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/password"
                    android:layout_marginEnd="10dp"
                    android:textSize="10sp"
                    android:textColor="@color/green_2"/>

                <EditText
                    android:id="@+id/reg_et_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_shape"
                    android:drawableStart="@drawable/ic_baseline_password_24"
                    android:drawablePadding="10dp"
                    android:inputType="textPassword" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true"
                    android:text="@string/confirm_password"
                    android:textSize="10sp"
                    android:textColor="@color/green_2"/>

                <EditText
                    android:id="@+id/reg_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_shape"
                    android:drawableStart="@drawable/ic_baseline_password_24"
                    android:drawablePadding="10dp"
                    android:inputType="textPassword" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/reg_cancel_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="2dp"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red"
                    android:background="@drawable/button_shape_2"/>

                <Button
                    android:id="@+id/reg_back_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:text="@string/back"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="2dp"
                    android:background="@drawable/button_shape_3"/>

                <Button
                    android:id="@+id/reg_complete_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="2dp"
                    android:backgroundTint="@color/green_2"
                    android:background="@drawable/button_shape_1"
                    android:text="Complete"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/red" />

</RelativeLayout>